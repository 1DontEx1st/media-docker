  # Muximux
  muximux:
    image: linuxserver/muximux:latest
    container_name: muximux
    volumes:
      - ${BASE_DIR}/muximux/config:/config
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=${TIMEZONE}
    labels:
      - traefik.backend=muximux
      - traefik.frontend.rule=Host:muximux.${DOMAIN}
      - traefik.docker.network=proxied
      - traefik.port=80
    networks:
      - internal
      - proxied
    expose:
      - 80
    restart: always
