services:
  # Oscarr
  oscarr:
    image: morpheus65535/oscarr:latest
    container_name: oscarr
    volumes:
      - ${BASE_DIR}/morpheus65535/config:/oscarr/data
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=${TIMEZONE}
    labels:
      - traefik.backend=oscarr
      - traefik.frontend.rule=Host:oscarr.${DOMAIN}
      - traefik.docker.network=proxied
      - traefik.port=5656
    networks:
      - proxied
    expose:
      - 5656
    restart: always
