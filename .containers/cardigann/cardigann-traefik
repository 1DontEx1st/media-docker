  # Cardigann
  cardigann:
    image: linuxserver/cardigann:latest
    container_name: cardigann
    volumes:
      - ${BASE_DIR}/cardigann/config:/config
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=${TIMEZONE}
    labels:
      - traefik.backend=cardigann
      - traefik.frontend.rule=Host:cardigann.${DOMAIN}
      - traefik.docker.network=proxied
      - traefik.port=5060
    networks:
      - internal
      - proxied
    expose:
      - 5060
    restart: always
