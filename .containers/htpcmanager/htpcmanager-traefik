  # HTPC Manager
  htpcmanager:
    image: linuxserver/htpcmanager:latest
    container_name: htpcmanager
    volumes:
      - ${BASE_DIR}/htpcmanager/config:/config
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=${TIMEZONE}
    labels:
      - traefik.backend=htpcmanager
      - traefik.frontend.rule=Host:htpcmanager.${DOMAIN}
      - traefik.docker.network=proxied
      - traefik.port=8085
    networks:
      - internal
      - proxied
    expose:
      - 8085
    restart: always