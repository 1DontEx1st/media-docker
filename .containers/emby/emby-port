  # Emby
  emby:
    image: emby/embyserver:latest
    container_name: emby
    volumes:
      - ${BASE_DIR}/emby/config:/config
      - ${MEDIA_DIR}/TV:/data/tv
      - ${MEDIA_DIR}/Movies:/data/movies
      - ${MEDIA_DIR}/Music:/data/music
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=${TIMEZONE}
    networks:
      - proxied
    ports:
      - 8096:8096
    restart: always