  # Calibre Web
  calibreweb:
    image: linuxserver/calibre-web:latest
    container_name: calibreweb
    volumes:
      - ${BASE_DIR}/calibreweb/config:/config
      - ${MEDIA_DIR}/Books:/books
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=${TIMEZONE}
    labels:
      - traefik.backend=calibreweb
      - traefik.frontend.rule=Host:calibre.${DOMAIN}
      - traefik.docker.network=proxied
      - traefik.port=8083
    networks:
      - proxied
    expose:
      - 8083
    restart: always
