services:
  # Calibre Web
  calibreweb:
    image: linuxserver/calibre-web:latest
    container_name: calibreweb
    volumes:
      - ${BASE_DIR}/calibreweb/config:/config
      - ${MEDIA_DIR}/Books:/books
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=${TIMEZONE}
    networks:
      - proxied
    ports:
      - 8083:8083
    restart: always
