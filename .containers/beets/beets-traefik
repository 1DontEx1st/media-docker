services:
  # Beets
  beets:
    image: linuxserver/beets:latest
    container_name: beets
    volumes:
      - ${BASE_DIR}/beets/config:/config
      - ${MEDIA_DIR}/Music:/movies
      - ${DOWNLOAD_DIR}:/downloads
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=${TIMEZONE}
    labels:
      - traefik.backend=beets
      - traefik.frontend.rule=Host:beets.${DOMAIN}
      - traefik.docker.network=proxied
      - traefik.port=8337
    networks:
      - proxied
    expose:
      - 8337
    restart: always
